@using MyDairy.Service.DTOs.Users;
@model IEnumerable<UserResultDto>

@{
    ViewData["Title"] = "GetAll";
}

<h1>All users</h1>

<div class="row">
    @foreach (var user in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                @if (@user.Attachment is null)
                {
                    <img id="profile_img" src="~/images/profile_image.jpg" class="card-img-top" alt="User Avatar" width="256" height="256">
                }
                else
                {
                    <img id="profile_img" src="~/images/@user.Attachment.Name" class="card-img-top" alt="User Avatar" width="256" height="256">
                }
                <div class="card-body">
                    <h5 class="card-title">@user.Firstname @user.Lastname</h5>
                    <p class="card-text">@user.Username</p>
                    <a href="@Url.Action("Login", "Users")" class="btn btn-primary">View Profile</a>
                </div>
            </div>
        </div>
    }
</div>
